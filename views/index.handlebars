<div class="container">
    <div class="row">
        {{!-- List of Available Burgers --}}
        <div class="col-4 burgers-list">
            <h5 class="text-center">Available Burgers</h5>
            <hr>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4 text-center mt-5">
            {{!-- Title of the page --}}
            <h1 class="display-4"><strong>Eat-Da-Burger</strong></h1>
            {{!-- Burger image --}}
            <img src="/assets/img/burgerIcon.png" class="img-fluid" alt="burger icon">
            <h2 class="mt-5">Add a Burger!</h2>
            {{!-- Add a burger form --}}
            <form id="burger-form">
                <div class="form-group">
                    <label for="burger-input">What burger would you like to eat?</label>
                    <input type="text" class="form-control" id="burger-input">
                </div>
                <button type="submit" class="btn btn-danger">Submit</button>
            </form>
        </div>
        {{!-- List of devoured burgers --}}
        <div class="col-4 burgers-list">
            <h5 class="text-center">Devoured Burgers</h5>
            <hr>
            <ul class="list-group">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>